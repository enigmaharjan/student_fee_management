  <!-- BATCH MODAL -->
  <div class="modal fade" id="addClassModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-success text-white">
          <h5 class="modal-title">Add Batch</h5>
          <button class="close" data-dismiss="modal"><span>&times;</span></button>
        </div>
        <div class="modal-body">
          <fieldset>
            <div class="form-group">
              <label for="title">Batch Name</label>
              <input type="text" class="form-control" id="batch">
            </div>
            <div class="modal-footer">
                  <button id="submit_batch" name="submit" type="submit" class="btn btn-success">Submit</button>
                  <button class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
        </div>
      </div>
    </div>
  </div>

  <!-- FEE MODAL -->
  <div class="modal fade" id="addFeeModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-warning text-white">
          <h5 class="modal-title">Add Fee</h5>
          <button class="close" data-dismiss="modal"><span>&times;</span></button>
        </div>
        <div class="modal-body">
          
          <div class="form-group">
            <label class="col-md-3 control-label">Batch</label>
            <div class="col-md-12 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon" style="max-width: 100%;"><i class="fa fa-list"></i></span>
                <select class="selectpicker form-control" style="height: 40px" id="select_batch">
                  <option>A really long option to push the menu over the edget</option>
                </select>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 "></label>
            <div class="col-md-12 ">
              <div class="input-group"><button class="col-md-12 " id="search">Search</button>
              </div></div>
            </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Student ID</label>
            <div class="col-md-12 inputGroupContainer">
          <div class="input-group">
            <span class="input-group-addon" style="max-width: 100%;"><i class="fa fa-list"></i></span>
            <select class="selectpicker form-control" style="height: 40px" id="select_student_fee">
              <option>A really long option to push the menu over the edget</option>
            </select>
          </div>
        </div>
      </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Amount</label>
            <div class="col-md-12 inputGroupContainer">
              <div class="input-group"><span class="input-group-addon"><i
                    class="fa fa-gbp"></i></span><input id="fee_amount" name="amount"
                  placeholder="Amount" class="form-control" required="true" value="" type="number">
              </div>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label">Fee Date</label>
            <div class="col-md-12 inputGroupContainer">
              <div class="input-group"><span class="input-group-addon"><i
                    class="fa fa-calendar"></i></span><input id="fee_date" name="fee_date"
                  placeholder="MM/DD/YYY" type="date" class="form-control" required="true"></div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Due Date</label>
            <div class="col-md-12 inputGroupContainer">
              <div class="input-group"><span class="input-group-addon"><i
                    class="fa fa-calendar"></i></span><input id="due_date" name="due_date"
                  placeholder="MM/DD/YYY" type="date" class="form-control" required="true"></div>
            </div>
          </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button id="submit_fee">Add Fee</button>
        </div>
      </div>
    </div>
  </div>

